@model ProfileTestModel
@{
    ViewData["Title"] = "Delete Profile";
}
<div class="text-center">
    <h3>Do you want to delete (@Model.Description)?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary btn-block" rule="button" asp-controller="ProfileTest" asp-action="DeleteProfileTestOk" asp-route-id="@Model.Id">Confirm</a>
    <a class="btn btn-secondary btn-block" rule="button" asp-controller="ProfileTest" asp-action="Index">Cancel</a>
</div>