@model List<ProfileTestModel>
@{
    ViewData["Title"] = "Profile List";
}

<h1>Profile Tests</h1>
<br />
<br />
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="ProfileTest" asp-action="AddProfileTest">New Profile Test</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Description</th>
            <th scope="col">Repo Type</th>
            <th scope="col">Url</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ProfileTestModel item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Description</td>
                    <td>@item.RepoType</td>
                    <td>@item.RepoLink</td>                    
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="ProfileTest" asp-action="EditProfileTest">Edit</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="ProfileTest" asp-action="DeleteProfileTest">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
